<?xml version="1.0" encoding="UTF-8"?>

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="files">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="file">
          <xs:attribute name="fileId" type="xs:integer"/>
          <xs:complexType>
            <xs:sequence>
              <xs:element name="number" type="xs:string"/>
              <xs:element name="description" type="xs:string"/>
              <xs:element name="movements">
                <xs:complexType>
                  <xs:sequence>
                    <xs:element name="movement">
                      <xs:attribute name="movementId" type="xs:integer"/>
                      <xs:complexType>
                        <xs:sequence>
                          <xs:element name="movedFileId" type="xs:string"/>
                          <xs:element name="movingOut" type="xs:boolean"/>
                          <xs:element name="movementTime" type="xs:integer"/>
                        </xs:sequence>
                      </xs:complexType>
                    </xs:element>
                  </xs:sequence>
                </xs:complexType>
              </xs:element>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
        
      </xs:sequence>
    </xs:complexType>
  </xs:element>

</xs:schema>

